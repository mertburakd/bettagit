                                            <option value="Yok">YOK</option>
                                            <option value="Var">VAR</option>
                                        </select>
                                    </div>
                                </div>




                                <div class="form-group">
                                    <label for="kuyruk" class="col-sm-2 control-label">KUYRUK SECIMI </label>
                                    <div class="col-sm-8">
                                        <select name="kuyruk" id="Kuyruk" class="form-control1  bbb" data-check="req" data-hata="Boş alanı doldurunuz.">
                                            <option value="@Model.kuyruk">@Model.kuyruk</option>
                                            <option value="HM">HM</option>
                                            <option value="HMPK">HMPK</option>
                                            <option value="OHM">OHM</option>
                                            <option value="OHPK">OHPK</option>
                                            <option value="CROWNTAIL">CROWNTAİL</option>
                                            <option value="VEILTEIL">VEILTEIL</option>
                                            <option value="BUTTERFLY">BUTTERFLY</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-2 control-label">Acıklama</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control1  bbb" id="aciklama" placeholder="Açıklama giriniz.. " data-check="req" data-hata="Boş alanı doldurunuz." name="aciklama" value="@Model.aciklama">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="focusedinput" class="col-sm-2 control-label">Fiyat</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control1  bbb" id="Fiyat" placeholder="Fiyat Bilgisi Giriniz..." data-check="req" data-hata="Boş alanı doldurunuz." name="fiyat" value="@Model.fiyat">
                                    </div>
                                </div>


                            </div>
                        </div>
                        <div class="panel-body">
                        </div>
                        <div class="bs-example" data-example-id="form-validation-states-with-icons">



                            <span id="inputGroupSuccess1Status" class="sr-only">(success)</span>
                        </div>
                        <div class="form-group">
                            <label for="photo">File input</label>
                            <input type="file" name="photo" id="inputpic" class="bbb" data-check="req" data-hata="Boş alanı doldurunuz.">
                            <p class="help-block">Example block-level help text here.</p>
