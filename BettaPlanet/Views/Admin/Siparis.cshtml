                <!----->

                <div class="grid-form1">
                    <form action="/Admin/Siparisolustur/@Model.id" name="formName" id="formName" enctype="multipart/form-data" class="form-horizontal xz" method="post">
                        <table class="table">

                            <thead class="thead-primary">
                                <tr class="text-center">
                                    <th>Fotoğraf</th>
                                    <th>Ürün Adı </th>
                                    <th>Fiyat</th>
                                    <th>Kuyruk</th>
                                    <th>Tecrübe</th>
                                    <th>Yaş</th>
                                    <th>Tarih</th>
                                </tr>
                            </thead>



                                <tr class="table-row">
                                    <td class="table-text">
                                        <img src="~/Content/Bettapic/Bettapick/@Model.resimk" alt="">
                                    </td>
                                    <td class="table-text">
                                        <h6> @Model.urunadi</h6>
                                    </td>

                                    <td class="table-text">
                                        <h6> @Model.fiyat</h6>
                                    </td>
                                    <td>
                                        <span class="fam">@Model.kuyruk</span>

                                    </td>
                                    <td>
                                        <span class="mar">@Model.tecrube</span>
                                    </td>
                                    <td class="table-text">
                                        <h6> @Model.yas</h6>
                                    </td>
                                    <td class="march">
                                        <h6> @Model.tarih</h6>
                                    </td>
                                </tr>
                            
                        </table>
                        <hr />
                        <div class="grid-form1">
                                <h5>Alıcı Bilgileri</h5>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="horizontal-form">

                                        <div class="form-group">
                                            <label for="focusedinput" class="col-sm-2 control-label">Müşteri Adı</label>
                                            <div class="col-sm-8">
                                                <input type="text" name="aliciad" class="form-control1  bbb" id="Renk" placeholder="Müşteri adı giriniz " data-check="req" data-hata="Boş alanı doldurunuz." value="">
                                            </div>
                                            <input type="hidden" value="@Model.id" />
                                        </div>
                                        <div class="form-group">
                                            <label for="focusedinput" class="col-sm-2 control-label">Adres</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control1 bbb" id="Yas" placeholder="Adres giriniz" data-check="req" data-hata="Boş alanı doldurunuz." name="adres" value="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="focusedinput" class="col-sm-2 control-label">Telefon</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control1  bbb" id="aciklama" placeholder="Telefon giriniz " data-check="req" data-hata="Boş alanı doldurunuz." name="telefon" value="">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="panel-body">
                                </div>
                        </div>

                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-sm-8 col-sm-offset-2">

                                    <a href="/Admin/Siparisolustur/@Model.id"> <input class="btn-primary btn" type="submit" value="Sipariş Oluştur" />  </a>

                                    <input type="reset" class="btn-inverse btn" id="reset" value="Reset" />
                                    <input type="button" class="btn-default btn" onclick="window.location.href='/Admin/Index'" value="Cancel">
                                </div>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
